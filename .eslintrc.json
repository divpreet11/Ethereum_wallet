{
   "env": {
      "browser": true,
      "es2021": true,
      "node": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "plugin:security/recommended"
   ],
   "parser": "@typescript-eslint/parser",
   "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
   },
   "plugins": ["@typescript-eslint", "prettier", "autofix", "security"],
   "rules": {
      "@typescript-eslint/no-unused-vars": 1,
      "max-lines-per-function": [
         "error",
         {
            "max": 50,
            "skipBlankLines": true,
            "skipComments": true,
            "IIFEs": true
         }
      ],
      "max-lines": [
         "error",
         {
            "max": 500,
            "skipBlankLines": true,
            "skipComments": true
         }
      ],
      "max-params": [
         "error",
         {
            "max": 5
         }
      ],
      "max-depth": [
         "error",
         {
            "max": 4
         }
      ],
      "max-nested-callbacks": [
         "error",
         {
            "max": 3
         }
      ],
      "no-console": ["off", { "allow": ["warn", "error", "info"] }],
      "no-debugger": 2,
      "no-dupe-args": 2,
      "no-empty": 2,
      "no-duplicate-imports": 2,
      "strict": 2,
      "default-case": 2,
      "require-await": 2,
      "vars-on-top": 2,
      "no-use-before-define": 2,
      "no-unused-vars": 2,
      "no-useless-constructor": 2,
      "no-var": 2,
      "prefer-const": 2,
      "sort-imports": [
         "off",
         {
            "ignoreCase": false,
            "ignoreDeclarationSort": false,
            "ignoreMemberSort": false,
            "memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
            "allowSeparatedGroups": false
         }
      ],
      "default-param-last": 2,
      "eqeqeq": 2,
      "security/detect-object-injection": 0,
      "@typescript-eslint/no-explicit-any": 2
   }
}
